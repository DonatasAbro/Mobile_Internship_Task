<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dogImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/dog_image"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/SumView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dogImageView"
        android:layout_alignTop="@+id/dogImageView"
        android:layout_alignEnd="@+id/dogImageView"
        android:layout_alignBottom="@+id/dogImageView"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textStyle="bold" />


</RelativeLayout>